{
  "name": "nest",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "dotenv -e .env.local -- nest start",
    "start:dev": "dotenv -e .env.local -- nest start --watch -b swc",
    "start:debug": "dotenv -e .env.local -- nest start --debug --watch",
    "start:prod": "node dist/apps/nest/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prisma:generate": "prisma generate",
    "prisma:dev": "prisma migrate dev",
    "prisma:reset:local": "dotenv -e .env.local -- npx prisma db push --force-reset && dotenv -e .env.local -- npx prisma db seed",
    "spec": "",
    "prisma:reset:spec": "dotenv -e .env.spec -- npx prisma db push --force-reset && dotenv -e .env.spec -- npx prisma db seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nest/test/jest-e2e.json"
  },
  "dependencies": {
    "@keyv/redis": "^4.2.0",
    "@nestjs/cache-manager": "^3.0.0-next.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^8.1.1",
    "@prisma/client": "^6.2.1",
    "@sendgrid/mail": "^8.1.4",
    "@vendia/serverless-express": "^4.12.6",
    "apple-signin-auth": "^1.7.8",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^6.3.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "deepmerge": "^4.3.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "json-bigint": "^1.0.0",
    "keyv": "^5.2.3",
    "lodash": "^4.17.21",
    "luxon": "^3.5.0",
    "nestjs-prisma": "^0.24.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "purest": "^4.0.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/deepmerge": "^2.2.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.17.13",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.24.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "prisma": "^6.2.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "setupFiles": [
      "<rootDir>/jest-bootstrap.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "astTransformers": {
            "before": [
              "jest-transform.ts"
            ]
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@app/core(|/.*)$": "<rootDir>/libs/core/src/$1",
      "^@app/profile(|/.*)$": "<rootDir>/libs/profile/src/$1",
      "^@app/user(|/.*)$": "<rootDir>/libs/user/src/$1",
      "^@app/mailer(|/.*)$": "<rootDir>/libs/mailer/src/$1",
      "^@app/spec(|/.*)$": "<rootDir>/libs/spec/src/$1",
      "^@app/helper(|/.*)$": "<rootDir>/libs/helper/src/$1"
    }
  }
}